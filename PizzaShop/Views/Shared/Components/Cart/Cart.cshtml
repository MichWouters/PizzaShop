@model IList<PizzaShop.ViewModels.CartViewModel>

<div class="row">
    @foreach (var pizza in Model)
    {
        <div class="row">
            <div class="col-md-9">
                <h3><label asp-for="@pizza.Name"/></h3>
            </div>
            <div class="col-md-3">
                <h3><label asp-for="@pizza.Price" /></h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <input type="button" value="-" />
                <input asp-for="@pizza.Quantity"  />
                <input type="button" value=" + " />
            </div>
            <div class="col-md-3">
                <a href="#">Remove</a>
            </div>
        </div>
        <hr />
    }
</div>